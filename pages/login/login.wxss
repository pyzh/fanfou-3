
.login-wrap {
    box-sizing: border-box;
    width: 100%;
    padding: 20rpx;
    text-align: center;
}
.login-wrap>text {
    font-size: 80rpx;
    text-align: center; 
    display: inline-block;
    margin-bottom: 70rpx; 
    letter-spacing: 30rpx; 
    color: rgb(172, 218, 229); 
}
.login-wrap>form {
    display: block;
    width: 90%;
    margin: 0 auto;
}
.form-control {
    width: 100%;
    margin-bottom: 50rpx;
}
.form-control input {
    box-sizing: border-box;
    display: block;
    padding: 10rpx 20rpx;
    width: 100%;
    height: 120rpx;
    border: 1px solid #ddd;
    text-align: left;
    font-size: 30rpx;
}
button {
    background-color: #00cadf;
    color: #fff;
    letter-spacing: 10rpx;
}
.focus {
    border: 1px solid #00cadf !important;
}